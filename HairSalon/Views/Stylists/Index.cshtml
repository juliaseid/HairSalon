@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h3>Stylists</h3>

@if (@Model.Count == 0)
{
  <h4>No stylists have been added yet!</h4>
} 

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}
<br>
<p><b>@Html.ActionLink("Add new Stylist", "Create")</b></p>

<p><b>@Html.ActionLink("Home", "Index", "Home")</b></p>